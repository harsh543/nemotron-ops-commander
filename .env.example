# Application
APP_ENV=development
APP_NAME=nemotron-ops-commander
LOG_LEVEL=INFO

# API
API_HOST=0.0.0.0
API_PORT=8000
API_KEY=change-me-in-production

# Nemotron Model
NEMOTRON_MODEL_NAME=nvidia/Nemotron-Mini-4B-Instruct
NEMOTRON_DEVICE=cuda
NEMOTRON_MAX_NEW_TOKENS=2048
NEMOTRON_TEMPERATURE=0.7
NEMOTRON_TOP_P=0.9
NEMOTRON_USE_SGLANG=true

# ChromaDB (embedded, no external server needed)
CHROMA_PERSIST_DIR=./chroma_storage
CHROMA_COLLECTION=incidents

# Observability (optional)
OTEL_EXPORTER_OTLP_ENDPOINT=
PROMETHEUS_PORT=9000

# Rate limiting
RATE_LIMIT_PER_MINUTE=60
